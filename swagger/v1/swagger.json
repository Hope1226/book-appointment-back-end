{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "servers": [
    {
      "url": "https://api-spaces.herokuapp.com"
    }
  ],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "paths": {
    "/spaces": {
      "post": {
        "summary": "Creates a new space",
        "tags": [
          "Spaces"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "type": "string",
            "required": true
          },
          {
            "name": "space",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "image": {
                  "type": "string"
                },
                "price": {
                  "type": "number"
                }
              },
              "required": [
                "name",
                "description",
                "image",
                "price"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "space created"
          },
          "422": {
            "description": "invalid request"
          }
        }
      },
      "get": {
        "summary": "Retrieves all spaces",
        "tags": [
          "Spaces"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "spaces retrieved"
          },
          "404": {
            "description": "spaces not found"
          }
        }
      }
    },
    "/spaces/{id}": {
      "get": {
        "summary": "Retrieves a space",
        "tags": [
          "Spaces"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "type": "string",
            "required": true
          },
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "space retrieved"
          },
          "404": {
            "description": "space not found"
          }
        }
      },
      "delete": {
        "summary": "Deletes a space",
        "tags": [
          "Spaces"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "Authorization",
            "in": "header",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "space deleted"
          },
          "404": {
            "description": "space not found"
          }
        }
      }
    },
    "/signup": {
      "post": {
        "summary": "Creates a new user",
        "tags": [
          "Sign up"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "schema": {
              "type": "object",
              "user": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "password_confirmation": {
                    "type": "string"
                  }
                }
              },
              "required": [
                "name",
                "email",
                "password",
                "password_confirmation"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Signed up successfull"
          },
          "422": {
            "description": "invalid request"
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Creates a new user",
        "tags": [
          "Login"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "schema": {
              "type": "object",
              "user": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              },
              "required": [
                "email",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Logged in successfull"
          },
          "422": {
            "description": "invalid request"
          }
        }
      }
    }
  }
}